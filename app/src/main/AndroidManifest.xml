        <activity android:name=".activity.ChartViewActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.CalendarViewActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.NotesActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.ForecastActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.LoanCalculatorActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.CurrencyConverterActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.ReminderActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.SettingsActivity" android:theme="@style/BaseAppTheme" />
        <activity android:name=".activity.AboutActivity" android:theme="@style/BaseAppTheme" />
    </application>

</manifest>